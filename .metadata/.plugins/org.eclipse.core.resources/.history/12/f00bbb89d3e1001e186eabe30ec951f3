package chapter04;

public class WhileExample {

	public static void main(String[] args) {
		//? while문
		/*
		 * while (조건식) {
		 * 실행문
		 * }
		 * 
		 * */
		
		int i = 1;
		while (i <= 10) {
			System.out.println(i);
			i++;
		}
		//! while문은 무한루프에 빠질 위험이 많기 때문에 조심해야 함
		// 루프(loop) 무한 루프 - 무한 반복
		
		System.out.println();
		
		int check = 0;
		while (check < 10) {
			System.out.println(check);
			check++;
		}
		
		// for문과 while문은 서로 변환이 가능함
		// >> for문은 반복횟수를 알고 있을 때 주로 사용
		// >> while문은 조건에 따라 반복할 때 주로 사용
		
		
		// 1~100까지의 합 출력하기
		int sum = 0;
		int j = 1;
		while (j <= 100) {
			sum += j;
			System.out.println(sum);
			j++;
		}
		
		
		
	}

}
