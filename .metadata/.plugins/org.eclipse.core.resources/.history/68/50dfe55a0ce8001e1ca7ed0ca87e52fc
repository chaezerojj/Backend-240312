package chapter19;

//? Math 클래스
// - 기본적인 수학 계산에 유용한 메서드로 구성됨
// - Math클래스의 생성자는 private이기 때문에 인스턴스 생성 불가능
// - 메소드는 모두 static

public class MathClass {
	public static void main(String[] args) {
		
		//? Math 메소드
		
		// 1. Math.abs()
		// static double abs(double a)
		// static int abs(int f)
		// >> 주어진 값의 절대값을 반환
		int i = Math.abs(-10);
		System.out.println(i);
		i = Math.abs(10);
		System.out.println(i);
		
		// 2. Math.ceil()
		// static double ceil(double a)
		// >> 주어진 값의 소수점을 올림하여 반환
		double d = Math.ceil(10.1);
		System.out.println(d); // 11.0
		double d2 = Math.ceil(-10.1);
		System.out.println(d2); // -10.0
		double d3 = Math.ceil(10.000015);
		System.out.println(d3); // 11.0
		
		// 3. Math.floor()
		// static double floor(double a)
		// >> 주어진 값의 소수점을 버림하여 반환
		d = Math.floor(10.8);
		System.out.println(d); // 10.0
		d2 = Math.floor(-10.8);
		System.out.println(d2); // -11.0
		
		// 4. Math.random()
		// static double random()
		// - 0.0 ~ 1.0 범위 사이이 임의의 double값을 반환
		// - 1.0은 포함 X
		d = Math.random();
		System.out.println(d);
		i = (int)(Math.random() * 10) + 1; // 1 <= i < 11 사이의 값이 나옴
		System.out.println(i);
		
		// 5. Math.round()
		// static long round(double a)
		// - 소수점 첫번째 자리에서 반올림한 정수값(long)을 반환
		
		
		
		
		
		
		
	}
}
