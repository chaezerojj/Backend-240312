package chapter04;

public class IfExample {

	public static void main(String[] args) {
		//? 조건문 if문
		/*
		 * if (조건식) {
		 * 		실행문A
		 * 		....
		 * 		} 실행문B
		 * 
		 * 1. 실행문A는 조건식이 true일때 실행됨
		 * 2. 조건식이 False라면 실행문B가 실행됨
		 * 
		 * */
		
		boolean b = true;
		if (b) {
			System.out.println("b는 true입니다.");
		} else {
			System.out.println("b는 false입니다.");
		}
		
		
		
		
	}

}
